{
  "name": "@hyperbun/core",
  "version": "0.1.1",
  "description": "Lightweight HTTP routing and JSX helpers built for Bun's native server.",
  "license": "MIT",
  "type": "module",
  "sideEffects": false,
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "keywords": [
    "bun",
    "http",
    "server",
    "routing",
    "jsx"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/apvarun/HyperBun.git"
  },
  "bugs": {
    "url": "https://github.com/apvarun/HyperBun/issues"
  },
  "homepage": "https://github.com/apvarun/HyperBun#readme",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "bun": ">=1.3.0"
  },
  "scripts": {
    "clean": "rimraf dist",
    "prebuild": "rimraf dist",
    "build": "bun build ./src/index.ts --minify --target bun --outdir ./dist --external react --external react-dom --external react-dom/client --external react-dom/server --external react/jsx-runtime --external react/jsx-dev-runtime --external bun-plugin-tailwind && tsc --project ./tsconfig.build.json",
    "prepublishOnly": "bun run build",
    "prepare": "bun run build"
  },
  "peerDependencies": {
    "bun": ">=1.3.0",
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "react-dom": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.3",
    "rimraf": "^5.0.5",
    "typescript": "^5.6.3"
  }
}
